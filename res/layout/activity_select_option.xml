<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Select_Option">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your Profile"
        android:id="@+id/textview"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black">

    </TextView>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogrp">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="@drawable/spinnerdesine"
    android:layout_marginTop="40dp"
    android:layout_margin="20dp">


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd1"
            android:layout_margin="20dp">

        </RadioButton>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_toRightOf="@+id/rd1"
            android:src="@drawable/shipper">

        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipper"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img1"
            android:textSize="25dp"
            android:id="@+id/shipper"
            android:textColor="@color/black"
            android:layout_margin="10dp">

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet consector adipiscing."

            android:layout_toRightOf="@+id/img1"
            android:textSize="10dp"
            android:layout_below="@+id/shipper"
            android:textColor="#5A4F4F"
            android:layout_margin="10dp">

        </TextView>


    </RelativeLayout>



</androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/spinnerdesine"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp">


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd2"
                android:layout_margin="20dp">

            </RadioButton>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@+id/rd2"
                android:src="@drawable/tansport">

            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/img2"
                android:textSize="25dp"
                android:id="@+id/transport"
                android:textColor="@color/black"
                android:layout_margin="10dp">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consector adipiscing."

                android:layout_toRightOf="@+id/img2"
                android:textSize="10dp"
                android:layout_below="@+id/transport"
                android:textColor="#5A4F4F"
                android:layout_margin="10dp">

            </TextView>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/shopping"
        android:background="@drawable/buttondesign"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="CONTINUE">

    </androidx.appcompat.widget.AppCompatButton>




</LinearLayout>